{
  "name": "kpbbfc",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "author": "KPBB",
  "license": "UNLICENSED",
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "prettier": "prettier --write '**/**.{ts,js}' '*.{json,md,yml}'",
    "types": "tsc --noEmit",
    "prepare": "husky install",
    "inherit": "node tools/package-inherit-cli.js update",
    "dev": "gulp build --stage dev --watch",
    "build": "gulp build --stage prod",
    "start": "node ./dist/server.js"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "3.25.0",
    "@koa/cors": "3.1.0",
    "@koa/router": "10.1.0",
    "@sentry/integrations": "6.11.0",
    "@sentry/node": "6.11.0",
    "@sentry/tracing": "6.11.0",
    "awilix": "5.0.0",
    "basic-auth": "2.0.1",
    "cls-hooked": "4.2.2",
    "deep-object-diff": "1.1.7",
    "dotenv": "10.0.0",
    "firebase-admin": "9.11.0",
    "joi": "17.4.2",
    "knex": "0.21.21",
    "koa": "2.13.1",
    "koa-body": "4.2.0",
    "koa-conditional-get": "3.0.0",
    "koa-etag": "4.0.0",
    "koa-helmet": "6.1.0",
    "koa-qs": "3.0.0",
    "mime-types": "2.1.32",
    "mysql": "2.18.1",
    "nanoid": "3.1.25",
    "nanoid-dictionary": "4.3.0",
    "pg": "8.7.1",
    "pino": "6.13.0",
    "serialize-error": "8.1.0",
    "shallow-equal-object": "1.1.1",
    "uuid": "8.3.2",
    "verror": "1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/node": "16.6.0",
    "@typescript-eslint/eslint-plugin": "4.29.1",
    "@typescript-eslint/parser": "4.29.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.3.2",
    "ts-node": "10.2.0",
    "typescript": "4.3.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix"
    ],
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  }
}
